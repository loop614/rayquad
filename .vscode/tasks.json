{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "RayquadBuild",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I/usr/local/include/raylib",
                "-g",
                "-o",
                "${workspaceFolder}/rayquad",
                {
                    "value": "${workspaceFolder}/src/*.cpp",
                    "quoting": "escape"
                },
                "-ggdb",
                "-l:libraylib.a",
                "-L/usr/local/lib/raylib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
